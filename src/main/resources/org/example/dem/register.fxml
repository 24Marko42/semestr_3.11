<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.dem.RegisterController">
    <children>
      <ImageView fitHeight="435.0" fitWidth="350.0" layoutX="-16.0" layoutY="-26.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../photo/EzhSListkom.jpg" />
         </image>
      </ImageView>
        <Label layoutX="10.0" layoutY="20.0" />
        <TextField fx:id="newUsernameField" layoutX="10.0" layoutY="50.0" prefWidth="280.0" promptText="Имя нового смешарика" />
        <Label layoutY="176.0" />
        <PasswordField fx:id="newPasswordField" layoutX="12.0" layoutY="130.0" prefWidth="280.0" promptText="Пароль, рекомендованный Лосяшем" />
        <Button fx:id="backButton" layoutX="14.0" layoutY="300.0" onAction="#back" text="Назад, пытаться попасть в Шарарам" />
        <Button fx:id="registerButton" layoutX="14.0" layoutY="260.0" onAction="#register" text="Стать смешариком!!!!" />
    </children>
</AnchorPane>
